<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>{% block title %} ADMINISTRACIÓN JANGOMAIL {% endblock %}</title>
        {% block stylesheets  %}
        <link type="text/css" rel="stylesheet" href="{{ asset('bundles/jangomail/css/bootstrap.min.css') }}" />
        <link type="text/css" rel="stylesheet" href="{{ asset('bundles/jangomail/css/datepicker.css') }}" />
        <link type="text/css" rel="stylesheet" href="{{ asset('bundles/jangomail/css/bootstrap-responsive.min.css') }}" />
        {% endblock %}
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block body %}
            <header>
                <div class="navbar">
                    <div class="navbar-inner">
                        <div class="container">
                            <ul class="nav">
                                <li><a href="{{ path("JangoMailBundle_envio") }}">Prueba</a></li>
                                <li><a href="{{ path("JangoMailBundle_logs") }}">Registros</a></li>
                                <li><a href="{{ path("JangoMailBundle_Grupos_index") }}">Grupos</a></li>
                                <li><a href="{{ path('jango_reportes', {start: 'yesterday'|date('Y-m-d')}) }}">Reportes de Campaña</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </header>
            <article class="container">{% block cuerpo %}{% endblock %}</article>
            <footer></footer>
        {% endblock %}
        {% block javascripts %}
            <script type="text/javascript" src="{{ asset('bundles/jangomail/js/jquery-1.7.2.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('bundles/jangomail/js/bootstrap.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('bundles/jangomail/js/bootstrap-datepicker.js') }}"></script>
        {% endblock %}
            <div id="ajax"></div>
    </body>
</html>
