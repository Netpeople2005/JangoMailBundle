<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <title>{% block title %} ADMINISTRACIÓN JANGOMAIL {% endblock %}</title>
    {% block stylesheets %}
        <link type="text/css" rel="stylesheet" href="{{ asset('bundles/jangomail/bs3/css/bootstrap.min.css') }}"/>
        {#<link type="text/css" rel="stylesheet" href="{{ asset('bundles/jangomail/css/datepicker.css') }}" />#}
        {#<link type="text/css" rel="stylesheet" href="{{ asset('bundles/jangomail/css/bootstrap-responsive.min.css') }}" />#}
    {% endblock %}
    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body style="padding-top: 70px;">
{% block body %}
    <header>
        <div class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <a class="navbar-brand" href="{{ path('JangoMailBundle_logs') }}">Admin de Correos</a>
                    <ul class="nav navbar-nav">
                        <li><a href="{{ path("JangoMailBundle_envio") }}">Prueba</a></li>
                        <li><a href="{{ path("JangoMailBundle_logs") }}">Registros</a></li>
                        <li><a href="{{ path("JangoMailBundle_Grupos_index") }}">Grupos</a></li>
                        <li>
                            <a href="{{ path('jango_campaign_reportes', {start: 'yesterday'|date('Y-m-d')}) }}">Reportes
                                de Campaña</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </header>
    <div class="container">
        <div class="page-header"><h1>{% block page_header %}{% endblock %}</h1></div>
        {% include "@JangoMail/flashes.html.twig" %}
        <article>{% block content %}{% endblock %}</article>
        <footer></footer>
    </div>
{% endblock %}
{% block javascripts %}
    <script type="text/javascript" src="{{ asset('bundles/jangomail/js/jquery-1.7.2.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/jangomail/bs3/js/bootstrap.min.js') }}"></script>
    {#<script type="text/javascript" src="{{ asset('bundles/jangomail/js/bootstrap-datepicker.js') }}"></script>#}
{% endblock %}
<div id="ajax"></div>
</body>
</html>
